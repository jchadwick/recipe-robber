{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server.js"
        },
       {
          "name": "Tests",
          "type": "node",
          "request": "launch",
          "program": "${workspaceRoot}\\node_modules\\mocha\\bin\\_mocha",
          "stopOnEntry": false,
          "args": [],
          "cwd": "${workspaceRoot}",
